<UserControl x:Class="MVVMFIleManagerWPF.CustomControls.UserButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFIleManagerWPF.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="5" d:DesignWidth="100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image x:Name="btnUser" Source="{Binding Path=ImageSource}" Grid.Column="0" Grid.RowSpan="2"/>
        <TextBlock x:Name="txtUser"  Margin="10" FontWeight="Bold" FontSize="11" VerticalAlignment="Bottom" Text="{Binding Path=Username}" Grid.Column="1" Grid.Row="0"/>
        <TextBlock FontWeight="Light" Margin="10" x:Name="txtStatus" FontSize="10" Text="{Binding Path=Status}" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</UserControl>
