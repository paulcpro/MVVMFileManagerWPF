<UserControl x:Class="MVVMFIleManagerWPF.CustomControls.ImageDefinitions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFIleManagerWPF.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="150">
    <Grid>
        <Image x:Name="btnImage" Source="{Binding Path=ImageSource}" />
        <TextBlock x:Name="txtText1" Text="{Binding Path=FirstText}" />
        <TextBlock x:Name="txtText2" Text="{Binding Path=SecondText}" />
    </Grid>
</UserControl>
