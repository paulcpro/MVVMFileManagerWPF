<UserControl x:Class="MVVMFIleManagerWPF.CustomControls.Stats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFIleManagerWPF.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="150">
    <Grid>
        

        <Border Background="Transparent" Grid.ColumnSpan="3">
            <Border Background="#EFF2FA" CornerRadius="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" x:Name="txtFirst" TextWrapping="Wrap"  Width="70" Text="{Binding FirstText}" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Grid.Column="1" x:Name="txtNumber" HorizontalAlignment="Center" Text="{Binding Number}" FontSize="20"/>
                    <TextBlock Grid.Column="2" x:Name="txtSecond" Text="{Binding SecondText}" />
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
